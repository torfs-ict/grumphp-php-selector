{
    "name": "torfs-ict/grumphp-php-selector",
    "description": "Select your local PHP executable to execute GrumPHP tasks",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpro/grumphp": "^2.1",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.34"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TorfsICT\\GrumPHP\\PhpSelector\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Kristof Torfs",
            "email": "kristof@torfs.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
